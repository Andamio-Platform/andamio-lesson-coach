# Andamio DB API Configuration
# Copy this file to .env and fill in your values

# API URL (local development or production)
ANDAMIO_API_URL=http://localhost:4000/api/v0

# JWT Token for authentication
# Generate this using: npx tsx scripts/generate-test-jwt.ts <userId> <walletAddress>
# in the andamio-db-api directory
ANDAMIO_JWT_TOKEN=

# Anthropic API Key for Claude integration (web UX lesson generation)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Optional: Set to 'true' to enable debug logging
DEBUG=false
